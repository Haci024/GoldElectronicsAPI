@model ProductDetailDTO
@inject LanguageService languageService
@{
    ViewData["Title"] = "ProductDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}
<div class="bg-gray-13 bg-md-transparent">
    <div class="container">
        <!-- breadcrumb -->
        <div class="my-md-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-3 flex-nowrap flex-xl-wrap overflow-auto overflow-xl-visble">
                    <li class="breadcrumb-item flex-shrink-0 flex-xl-shrink-1"><a href="https://transvelo.github.io/electro-html/2.0/html/home/index.html">Home</a></li>
                    <li class="breadcrumb-item flex-shrink-0 flex-xl-shrink-1"><a href="shop.html">Accessories</a></li>
                    <li class="breadcrumb-item flex-shrink-0 flex-xl-shrink-1"><a href="shop.html">Headphones</a></li>
                    <li class="breadcrumb-item flex-shrink-0 flex-xl-shrink-1 active" aria-current="page">Ultra Wireless S50 Headphones S50 with Bluetooth</li>
                </ol>
            </nav>
        </div>
        <!-- End breadcrumb -->
    </div>
</div>
<!-- End breadcrumb -->
<div class="container">
    <!-- Single Product Body -->
    <div class="mb-xl-14 mb-6">
        <div class="row">
            <div class="col-md-5 mb-4 mb-md-0">
                <div id="sliderSyncingNav" class="js-slick-carousel u-slick mb-2"
                     data-infinite="true"
                     data-arrows-classes="d-none d-lg-inline-block u-slick__arrow-classic u-slick__arrow-centered--y rounded-circle"
                     data-arrow-left-classes="fas fa-arrow-left u-slick__arrow-classic-inner u-slick__arrow-classic-inner--left ml-lg-2 ml-xl-4"
                     data-arrow-right-classes="fas fa-arrow-right u-slick__arrow-classic-inner u-slick__arrow-classic-inner--right mr-lg-2 mr-xl-4"
                     data-nav-for="#sliderSyncingThumb">
                     @foreach (var item in Model.ProductImages)
                    {
                        <div class="js-slide">
                        <img class="img-fluid" src="@item.ImageUrl" alt="Image Description" width="100%">
                    </div>
                    }
                   
                </div>
                <div id="sliderSyncingThumb" class="js-slick-carousel u-slick u-slick--slider-syncing u-slick--slider-syncing-size u-slick--gutters-1 u-slick--transform-off"
                     data-infinite="true"
                     data-slides-show="6"
                     data-is-thumbs="true"
                     data-nav-for="#sliderSyncingNav">
                     @foreach (var item in Model.ProductImages)
                    {
                         <div class="js-slide" style="cursor: pointer;">
                        <img class="img-fluid" src="@item.ImageUrl" alt="Image Description">
                    </div>
                    }
                   
                  
                </div>
            </div>
            <div class="col-md-7 mb-md-6 mb-lg-0">
                <div class="mb-2">
                    <div class="border-bottom mb-3 pb-md-1 pb-3">
                        <a href="#" class="font-size-12 text-gray-5 mb-2 d-inline-block">Notbuklar</a>
                        <h2 class="font-size-25 text-lh-1dot2">@Model.Name</h2>
                        <div class="mb-2">
                            <a class="d-inline-flex align-items-center small font-size-15 text-lh-1" href="#">
                                <div class="text-warning mr-2">
                                    <small class="fas fa-star"></small>
                                    <small class="fas fa-star"></small>
                                    <small class="fas fa-star"></small>
                                    <small class="fas fa-star"></small>
                                    <small class="far fa-star text-muted"></small>
                                </div>
                                <span class="text-secondary font-size-13"> 1 @languageService.GetKey("Müştəri rəyi")</span>
                            </a>
                        </div>
                        <div class="d-md-flex align-items-center">
                            <a href="#" class="max-width-150 ml-n2 mb-2 mb-md-0 d-block"><img class="img-fluid" src="~/ui/assets/img/200X60/img1.png" alt="Image Description"></a>
                            <div class="ml-md-3 text-gray-9 font-size-14">@languageService.GetKey("Stokda:")@if(Model.Status)
                                {
                                     <span class="text-green font-weight-bold">@languageService.GetKey("Mövcuddur")</span>
                                }
                               else {
                                     <span class="text-red font-weight-bold">@languageService.GetKey("Tükənib")</span>
                                }
                                </div>
                        </div>
                    </div>
                    <div class="flex-horizontal-center flex-wrap mb-4">
                        <a href="#" class="text-gray-6 font-size-13 mr-2"><i class="ec ec-favorites mr-1 font-size-15"></i>Wishlist</a>
                        <a href="#" class="text-gray-6 font-size-13 ml-2"><i class="ec ec-compare mr-1 font-size-15"></i> Compare</a>
                    </div>
                    <div class="mb-2">
                        <ul class="font-size-14 pl-3 ml-1 text-gray-110">
                            <li>4.5 inch HD Touch Screen (1280 x 720)</li>
                            <li>Android 4.4 KitKat OS</li>
                            <li>1.4 GHz Quad Core™ Processor</li>
                            <li>20 MP Electro and 28 megapixel CMOS rear camera</li>
                        </ul>
                    </div>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt.</p>
                    <p><strong>Məhsul kodu</strong>: FW511948218</p>
                    <div class="mb-4">
                        <div class="d-flex align-items-baseline">
                            @if (Model.IsSale)
                            {
                            <ins class="font-size-36 text-decoration-none">@Model.SalesPrice azn</ins>
                            <del class="font-size-20 ml-2 text-gray-6">@Model.Price azn</del>
                            }
                            else{
                            <ins class="font-size-36 text-decoration-none">@Model.Price azn</ins>
                            }

                        </div>
                    </div>
                    <div class="border-top border-bottom py-3 mb-4">
                        <div class="d-flex align-items-center">
                            <h6 class="font-size-14 mb-0">@languageService.GetKey("Rənglər")</h6>
                            <!-- Select -->
                            <select class="js-select selectpicker dropdown-select ml-3"
                                    data-style="btn-sm bg-white font-weight-normal py-2 border">
                                    @foreach (var color in Model.ColorList)
                                {
                                <option value="">@color.Name</option>
                               
                                }
                              
                            </select>
                            
                        </div>
                    </div>
                    <div class="d-md-flex align-items-end mb-3">
                        <div class="max-width-150 mb-4 mb-md-0">
                            <h6 class="font-size-14">Quantity</h6>
                            
                            <div class="border rounded-pill py-2 px-3 border-color-1">
                                <div class="js-quantity row align-items-center">
                                    <div class="col">
                                        <input class="js-result form-control h-auto border-0 rounded p-0 shadow-none" type="text" value="1">
                                    </div>
                                    <div class="col-auto pr-1">
                                        <a class="js-minus btn btn-icon btn-xs btn-outline-secondary rounded-circle border-0" href="javascript:;">
                                            <small class="fas fa-minus btn-icon__inner"></small>
                                        </a>
                                        <a class="js-plus btn btn-icon btn-xs btn-outline-secondary rounded-circle border-0" href="javascript:;">
                                            <small class="fas fa-plus btn-icon__inner"></small>
                                        </a>
                                    </div>
                                </div>
                            </div>
                          
                        </div>
                        <div class="ml-md-3">
                            <a href="#" class="btn px-5 btn-primary-dark transition-3d-hover"><i class="ec ec-add-to-cart mr-2 font-size-20"></i>@languageService.GetKey("Add to Cart")</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Single Product Body -->
    <!-- Single Product Tab -->
    <div class="mb-8">
        <div class="position-relative position-md-static px-md-6">
            <ul class="nav nav-classic nav-tab nav-tab-lg justify-content-xl-center flex-nowrap flex-xl-wrap overflow-auto overflow-xl-visble border-0 pb-1 pb-xl-0 mb-n1 mb-xl-0" id="pills-tab-8" role="tablist">
              
                
                <li class="nav-item flex-shrink-0 flex-xl-shrink-1 z-index-2">
                    <a class="nav-link" id="Jpills-three-example1-tab" data-toggle="pill" href="#Jpills-three-example1" role="tab" aria-controls="Jpills-three-example1" aria-selected="true">@languageService.GetKey("Məhsulun özəllikləri")</a>
                </li>
                <li class="nav-item flex-shrink-0 flex-xl-shrink-1 z-index-2">
                    <a class="nav-link" id="Jpills-four-example1-tab" data-toggle="pill" href="#Jpills-four-example1" role="tab" aria-controls="Jpills-four-example1" aria-selected="false">@languageService.GetKey("Rəylər")</a>
                </li>
            </ul>
        </div>
        <!-- Tab Content -->
        <div class="borders-radius-17 border p-4 mt-4 mt-md-0 px-lg-10 py-lg-9">
            <div class="tab-content" id="Jpills-tabContent">
                
                
                <div class="tab-pane fade active show" id="Jpills-three-example1" role="tabpanel" aria-labelledby="Jpills-three-example1-tab">
                    <div class="mx-md-5 pt-1">
                        <div class="table-responsive mb-4">
                            <table class="table table-hover">
                                <tbody>
                                    <tr>
                                        <th class="px-4 px-xl-5 border-top-0">@languageService.GetKey("Kateqoriya")</th>
                                        <td class="border-top-0">Notbuklar</td>
                                    </tr>
                                    <tr>
                                        <th class="px-4 px-xl-5">@languageService.GetKey("Marka")</th>
                                        <td>Asus</td>
                                    </tr>
                                    <tr>
                                        <th class="px-4 px-xl-5">@languageService.GetKey("Çəki")</th>
                                        <td> Qeyd edilməyib!</td>
                                    </tr>
                                    <tr>
                                        <th class="px-4 px-xl-5">Rəng</th>
                                        <td>@foreach (var item in Model.ColorList)
                                            {
                                               <div>@languageService.GetKey(item.Name)</div>
                                            }</td>
                                    </tr>
                                    <tr>
                                        <th class="px-4 px-xl-5">Qaranti</th>
                                        <td>6 ay və 1 il arasında</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <h3 class="font-size-18 mb-4">Texniki göstəricilər</h3>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <tbody>
                                    @foreach (var skill in Model.DescriptionList)
                                    {
                                      <tr>
                                        <th class="px-4 px-xl-5 border-top-0">@skill.SkillName</th>
                                        <td class="border-top-0">@skill.Description</td>
                                    </tr>  
                                    }
                                    
                             
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="Jpills-four-example1" role="tabpanel" aria-labelledby="Jpills-four-example1-tab">
                    <div class="row mb-8">
                        <div class="col-md-6">
                        @await Component.InvokeAsync("ReviewStatistics",new { productId = Model.Id })
                        </div>
                        <div class="col-md-6">
                            <h3 class="font-size-18 mb-5">@languageService.GetKey("Rəy əlavə et")</h3>
                            <!-- Form -->
                            @await Component.InvokeAsync("CustomerReview",new {productId=Model.Id})
                            <!-- End Form -->
                        </div>
                    </div>
                  
                    <!-- Review -->
                    @foreach (CommentListByProductDTO item in Model.CommentList)
                    {
                        <div class="border-bottom border-color-1 pb-4 mb-4">
                        <!-- Review Rating -->
                        <div class="d-flex justify-content-between align-items-center text-secondary font-size-1 mb-2">

                  <div class="text-warning text-ls-n2 font-size-16" style="width: 80px;">
                       @for (int i = 0; i < item.Rate; i++)
                                    {
                    <small class="fas fa-star"></small>
                   
                                    }
                        @for (int i = 0; i <5-item.Rate; i++)
                                    {
                    <small class="far fa-star text-muted"></small>
         
                                    }
                       
                
                </div>
                        </div>
                       

                        <p class="text-gray-90">@item.Content</p>

                        <!-- Reviewer -->
                        <div class="mb-2">
                            <strong>@item.FullName</strong>
                            <span class="font-size-13 text-gray-23">-@item.MessageDate.ToString("MMMM dd, yyyy")</span>
                        </div>
                        <!-- End Reviewer -->
                    </div>
                    }
                    <!-- End Review -->
                 
                </div>
            </div>
        </div>
        <!-- End Tab Content -->
    </div>
     @await Component.InvokeAsync("ProductDetailSlider",new {categoryId = Model.CategoryId})

  
</div>
