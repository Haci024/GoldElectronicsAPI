@model AddSubscriberDTO
@inject LanguageService language

<div class="bg-primary py-3">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7 mb-md-3 mb-lg-0">
                <div class="row align-items-center">
                    <div class="col-auto flex-horizontal-center">
                        <i class="ec ec-newsletter font-size-40"></i>
                        <h2 class="font-size-20 mb-0 ml-3">@language.GetKey("Elektron ünvanla abunə ol")</h2>
                    </div>
                    <div class="col my-4 my-md-0">
                        <h5 class="font-size-15 ml-4 mb-0">@language.GetKey("...və") <strong>@language.GetKey("İlk alışda 25 azn endirim kuponu qazan!")</strong></h5>
                    </div>
                </div>
            </div>
            <div class="col-lg-5">
                <!-- Subscribe Form -->
                <form class="js-validate js-form-message" method="post" asp-controller="Subscriber" asp-action="NewSubscriber">
                    <label class="sr-only" for="subscribeSrEmail">@language.GetKey("Elektron ünvan")</label>
                    <div class="input-group input-group-pill">
                        <input type="email" class="form-control border-0 height-40"  asp-for="Email"  name="email" id="subscribeSrEmail" placeholder="@language.GetKey("Elektron ünvan...")" aria-label="Email address" aria-describedby="subscribeButton" required
                               data-msg="@language.GetKey("Zəhmət olmasa düzgün elektron ünvanı daxil edin...")">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-dark btn-sm-wide height-40 py-2" id="subscribeButton">@language.GetKey("Abunə ol")</button>
                        </div>
                    </div>
                </form>
              
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
