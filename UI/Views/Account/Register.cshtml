@inject LanguageService languageService
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="mb-4">
        <h1 class="text-center">@languageService.GetKey("Qeydiyyat")</h1>
    </div>
    <div class="my-4 my-xl-8">
        <div class="row">

            <div class="col-md-3 ml-xl-auto mr-md-auto mr-xl-0 mb-8 mb-md-0">
            </div>
            <div class="col-md-6 ml-md-auto ml-xl-0 mr-xl-auto">
             
                <p class="text-gray-90 mb-4">Create new account today to reap the benefits of a personalized shopping experience.</p>
                <!-- End Title -->
                <!-- Form Group -->
                <form class="js-validate" novalidate="novalidate" method="post">
                    <div class="js-form-message form-group mb-5">
                        <label class="form-label" for="RegisterSrEmailExample3">
                            @languageService.GetKey("İstifadəçi adı")
                            <span class="text-danger">*</span>
                        </label>
                        <input type="text" class="form-control" name="Username" id="RegisterSrEmailExample3" placeholder="Username" aria-label="Email address" required
                               data-msg="@languageService.GetKey("Zəhmət olmasa istifadəçi adı yaradın")"
                               data-error-class="u-has-error"
                               data-success-class="u-has-success">
                    </div>
                    <div class="js-form-message form-group mb-5">
                        <label class="form-label" for="RegisterSrEmailExample3">
                            @languageService.GetKey("Elektron ünvan")
                            <span class="text-danger">*</span>
                        </label>
                        <input type="email" class="form-control" name="email" id="RegisterSrEmailExample3" placeholder="Email address" aria-label="Email address" required
                               data-msg="Please enter a valid email address."
                               data-error-class="u-has-error"
                               data-success-class="u-has-success">
                    </div>
                    <div class="js-form-message form-group mb-5">
                        <label class="form-label" for="RegisterSrEmailExample3">
                            @languageService.GetKey("Şifrə")
                            <span class="text-danger">*</span>
                        </label>
                        <input type="password" class="form-control" name="Password" id="RegisterSrEmailExample3"  aria-label="Email address" required
                               data-msg="Please enter a valid email address."
                               data-error-class="u-has-error"
                               data-success-class="u-has-success">
                    </div>
                    <div class="js-form-message form-group mb-5">
                        <label class="form-label" for="RegisterSrEmailExample3">
                            @languageService.GetKey("Təkrar şifrə")
                            <span class="text-danger">*</span>
                        </label>
                        <input type="password" class="form-control" name="ConfirmPassword" id="RegisterSrEmailExample3"  aria-label="Email address" required
                               data-msg="Please enter a valid email address."
                               data-error-class="u-has-error"
                               data-success-class="u-has-success">
                    </div>
                    <div class="js-form-message mb-3">
                        <div class="custom-control custom-checkbox d-flex align-items-center">
                            <input type="checkbox" class="custom-control-input" id="rememberCheckbox" name="rememberCheckbox" 
                                   data-error-class="u-has-error"
                                   data-success-class="u-has-success"
                                   onchange="toggleParagraph(this)">
                            <label class="custom-control-label form-label" for="rememberCheckbox">
                                @languageService.GetKey("Həmçinin abunə ol və ən son yeniliklərdən xəbərdar olun.")
                            </label>
                        </div>
                    </div>
                    <!-- End Form Group -->
                    <p id="infoParagraph" class="text-gray-90 mb-4" style="display: none;">@languageService.GetKey("Abunə olmaqla ilk  alış-verişinizdə Odissey Electronics-dən  25 manatlıq kupon qazanırsınız.Daha ətraflı...") <a asp-controller="Faq" asp-action="Index" class="text-blue">@languageService.GetKey("Tez-tez verilən suallar")</a></p>
                    <!-- Button -->

                    <div class="mb-6">
                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary-dark-w px-5">Register</button>
                        </div>
                    </div>
                    <!-- End Button -->
                </form>
                <h3 class="font-size-18 mb-3">Sign up today and you will be able to :</h3>
                <ul class="list-group list-group-borderless">
                    <li class="list-group-item px-0"><i class="fas fa-check mr-2 text-green font-size-16"></i> Speed your way through checkout</li>
                    <li class="list-group-item px-0"><i class="fas fa-check mr-2 text-green font-size-16"></i> Track your orders easily</li>
                    <li class="list-group-item px-0"><i class="fas fa-check mr-2 text-green font-size-16"></i> Keep a record of all your purchases</li>
                </ul>
            </div>
            <div class="col-md-3 ml-xl-auto mr-md-auto mr-xl-0 mb-8 mb-md-0">
            </div>
        </div>
    </div>
</div>
<script>
    function toggleParagraph(checkbox) {
        var paragraph = document.getElementById("infoParagraph");
        if (checkbox.checked) {
            paragraph.style.display = "block";
        } else {
            paragraph.style.display = "none";
        }
    }
</script>
