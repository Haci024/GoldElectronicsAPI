@model AddCvDTO
@inject LanguageService language
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    /* CSS Dosyasına Ekle */
    .custom-file-input {
        position: relative;
        width: 100%;
        height: 3rem;
        cursor: pointer;
        background-color: yellow;
        color: black;
    }


       

</style>

<div class="container">
    <div class="mb-5">
        <h1 class="text-center">@language.GetKey("İşə qəbul prosesi")</h1>
    </div>
    <div class="row mb-10">
        <div class="col-lg-7 col-xl-6 mb-8 mb-lg-0">
            <div class="mr-xl-6">
                <div class="border-bottom border-color-1 mb-5">
                    <h3 class="section-title mb-0 pb-2 font-size-25">Qəbul üçün Cv-ni bizə göndər və komandamıza qoşul</h3>
                </div>
                <p class="max-width-830-xl text-gray-90">Aenean massa diam, viverra vitae luctus sed, gravida eget est. Etiam nec ipsum porttitor, consequat libero eu, dignissim eros. Nulla auctor lacinia enim id mollis. Curabitur luctus interdum eleifend. Ut tempor lorem a turpis fermentum.</p>
                <form class="js-validate" novalidate="novalidate" method="post" enctype="multipart/form-data">
                    <div class="row">
               

                        <div class="col-md-12">
                            <!-- Input -->
                            <div class="js-form-message mb-4">
                                <label class="form-label">
                                    @language.GetKey("Elektron ünvan")
                                </label>
                                <input type="text" class="form-control" asp-for="Email" name="Email" placeholder="" aria-label="" data-msg="@language.GetKey("Elektron ünvan boş ola bilməz!")" data-error-class="u-has-error" data-success-class="u-has-success">
                            </div>
                           
                        </div>
                        <div class="col-md-12">
                            <div class="js-form-message mb-4">
                                <label class="form-label">
                                    @language.GetKey("Hansı iş üzrə müraciət etdiyinizi qeyd edin:")
                                </label>

                                <div class="input-group">
                                    <input class="form-control" asp-for="WorkType" name="WorkType" placeholder="" aria-label="" data-msg="@language.GetKey("Hansı sahə üzrə müraciət etdiyinizi qeyd edin...")" data-error-class="u-has-error" data-success-class="u-has-success" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="js-form-message mb-4">
                                <label class="form-label">
                                    @language.GetKey("Cv")
                                </label>
                                <div class="input-group">
                                    <input class="form-control" type="file" asp-for="CvFile" placeholder="" aria-label="" data-msg="@language.GetKey("Fayl daxil edilməyib...")" data-error-class="u-has-error" data-success-class="u-has-success">
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary-dark-w px-5">@language.GetKey("Göndər")</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-lg-5 col-xl-6">
            <div class="mb-6">
                <img style="width=100%;height=288px;" src="~/ui/assets/img/564X520/img2.jpg" />
            </div>
            <div class="border-bottom border-color-1 mb-5">
                <h3 class="section-title mb-0 pb-2 font-size-25">Our Address</h3>
            </div>
            <address class="mb-6 text-lh-23">
                121 King Street,
                Melbourne VIC 3000,
                Australia
                <div class="">@language.GetKey("Kömək (+994))-055-551-53-45")</div>
                <div class="">Email: <a class="text-blue text-decoration-on" href="mailto:contact@yourstore.com">info@electro.com</a></div>
            </address>
            <h5 class="font-size-14 font-weight-bold mb-3">@language.GetKey("İş saatları")</h5>
            <div class="">@language.GetKey("Həftə içi"): 9:00-22:00</div>
            <div class="mb-6">@language.GetKey("Həftəsonu"): 9:00-21:00</div>
            <h5 class="font-size-14 font-weight-bold mb-3">Careers</h5>
            <p class="text-gray-90">If you’re interested in employment opportunities at Electro, please email us: <a class="text-blue text-decoration-on" href="mailto:contact@yourstore.com">contact@yourstore.com</a></p>
        </div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
