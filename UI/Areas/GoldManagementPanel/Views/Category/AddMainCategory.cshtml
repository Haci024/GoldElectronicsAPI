@model NewMainCategoryDTO
@{
    ViewData["Title"] = "AddMainCategory";
    Layout = "~/Areas/GoldManagementPanel/Views/Shared/_GoldManagementLayout.cshtml";
}

<div class="content">

    <!-- Start Content-->
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-6">
                <div class="page-title-box">

                    <h4 class="page-title">Yeni üst kateqoriya</h4>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <div class="card">
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="tab-pane show active" id="input-types-preview">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <form method="post">
                                            <div class="mb-3">
                                                <label for="simpleinput" class="form-label">Kateqoriyanın adı</label>
                                                <input type="text" asp-for="Name" id="simpleinput" name="Name" class="form-control">
                                            </div>

                                            <div class="row">
                                                <div class="text-center">
                                                    <button class="btn btn-primary" type="submit">Əlavə et</button>
                                                    <a class="btn btn-success" asp-action="MainCategoryList">Geri</a>
                                                </div>
                                            </div>
                                        </form>
                                    </div> 


                                </div>
                             
                            </div> <!-- end preview-->
                            <!-- end preview code-->
                        </div> <!-- end tab-content-->
                    </div> <!-- end card-body -->
                </div> <!-- end card -->
            </div>
        </div>


    </div>

</div> 