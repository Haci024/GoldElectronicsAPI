@model NewImageDTO
@{
    ViewData["Title"] = "AddImage";
    Layout = "~/Areas/GoldManagementPanel/Views/Shared/_GoldManagementLayout.cshtml";
}
<div class="content">
    <!-- Start Content-->
    <div class="container-fluid">
        <!-- start page title -->
        <div class="row">
            <div class="col-6">
                <div class="page-title-box">
                    <h4 class="page-title">Yeni şəkil</h4>
                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row">
            <div class="col-6">
                <div class="card">
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="tab-pane show active" id="input-types-preview">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <form enctype="multipart/form-data" method="post">
                                           
                                            
                                            <div class="mb-3">
                                                <label for="simpleinput" class="form-label">Rəsim yükləyin</label>
                                               <input type="file" asp-for="Image" id="simpleinput" name="Image" class="form-control">
                                            </div>
                                           
                                            <div style="color:red" asp-validation-summary="ModelOnly"></div>
                                            <div class="row">
                                                <div class="text-center">
                                                    <button class="btn btn-primary" type="submit">Əlavə et</button>
                                                    <a class="btn btn-success" asp-controller="Product" asp-action="ImageList" asp-route-productId="@ViewBag.ProductId">Geri</a>
                                                </div>
                                            </div>
                                        </form>
                                    </div> <!-- end col -->
                                </div>
                                <!-- end row-->
                            </div> <!-- end preview-->
                            <!-- end preview code-->
                        </div> <!-- end tab-content-->
                    </div> <!-- end card-body -->
                </div> <!-- end card -->
            </div><!-- end col -->
        </div><!-- end row -->
    </div> <!-- container -->
</div> <!-- content -->


