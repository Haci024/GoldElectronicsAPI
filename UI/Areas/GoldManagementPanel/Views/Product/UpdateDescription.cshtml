                                                    <a class="btn btn-success" asp-action="DescriptionList" asp-route-productId="@ViewBag.ProductId">Geri</a>
                                                </div>
                                            </div>
                                        </form>
                                    </div>


                                </div>

                            </div> <!-- end preview-->
                            <!-- end preview code-->
                        </div> <!-- end tab-content-->
                    </div> <!-- end card-body -->
                </div> <!-- end card -->
            </div>
        </div>


    </div>

</div>


